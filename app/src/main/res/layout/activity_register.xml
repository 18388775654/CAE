<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".function.login.register.RegisterActivity">
    <include layout="@layout/toolbar_back"/>
    <TextView
        android:text="用户注册"
        android:textSize="20dp"
        android:textColor="@android:color/background_light"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </TextView>
    <LinearLayout
        android:layout_marginTop="100dp"
        android:layout_marginHorizontal="40dp"
        android:background="@drawable/shape"
        android:layout_centerHorizontal="true"
        android:backgroundTint="#99ffffee"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="用户资料填写："
            android:textSize="18dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_marginHorizontal="25dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/reg_user_name"
                android:hint="请输入昵称"
                android:textSize="18dp"
                android:drawableStart="@drawable/ic_person"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/reg_password"
                android:hint="请输入密码（6~18位）"
                android:textSize="18dp"
                android:inputType="textPassword"
                android:maxLength="16"
                android:drawableStart="@drawable/ic_lock"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/reg_password2"
                android:hint="请再次输入密码"
                android:textSize="18dp"
                android:inputType="textPassword"
                android:maxLength="16"
                android:drawableStart="@drawable/ic_lock"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/reg_phone_number"
                android:hint="请输入手机号"
                android:textSize="18dp"
                android:inputType="phone"
                android:maxLength="11"
                android:drawableStart="@drawable/ic_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/reg_email"
                android:hint="请输入手邮箱地址"
                android:textSize="18dp"
                android:inputType="textEmailAddress"
                android:drawableStart="@drawable/ic_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="专业:"
                    android:textSize="16dp"
                    android:gravity="center_vertical"
                    android:drawableStart="@drawable/ic_major"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"/>
                <TextView
                    android:id="@+id/reg_major"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint=" 请选择专业"
                    android:textSize="15dp"
                    android:gravity="center"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/spinner_background"
                    android:entries="@array/profession_arrays"
                    android:spinnerMode="dropdown" />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="职业:"
                    android:textSize="16dp"
                    android:gravity="center_vertical"
                    android:drawableStart="@drawable/ic_profession"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"/>
                <TextView
                    android:id="@+id/reg_profession"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="5dp"
                    android:layout_marginLeft="10dp"
                    android:textSize="15dp"
                    android:background="@drawable/spinner_background"
                    android:entries="@array/profession_arrays"
                    android:gravity="center"
                    android:hint=" 请选择职业"
                    android:spinnerMode="dropdown" />
            </LinearLayout>
            <TextView
                android:id="@+id/reg_address"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:layout_marginBottom="5dp"
                android:background="@drawable/spinner_background"
                android:drawableStart="@drawable/ic_place"
                android:hint="请选择地址"
                android:gravity="center_vertical"
                android:textSize="18dp" />
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:drawableStart="@drawable/ic_authcode"
                    android:id="@+id/reg_auth_code"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:hint="请输入验证码"
                    android:layout_height="wrap_content"/>

                <ImageView

                    android:id="@+id/reg_img_code"
                    android:layout_width="0dp"
                    android:layout_height="38dp"
                    android:layout_gravity="end"
                    android:layout_weight="2" />
            </LinearLayout>
        </LinearLayout>
        <Button
            android:id="@+id/register_btn"
            android:text="注册"
            android:backgroundTint="@color/colorAccent"
            android:textColor="@android:color/background_light"
            android:textSize="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:minHeight="20dp"
            android:layout_marginHorizontal="40dp"
            android:layout_marginVertical="40dp"
            android:background="@drawable/shape" />
    </LinearLayout>

</RelativeLayout>